<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Friends.AllFriends.AllFriends">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/global_chat_searchbackground"
        android:gravity="center_vertical"
        android:paddingHorizontal="15dp">

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:src="@drawable/global_chat_searchicon" />

        <EditText
            android:id="@+id/search_bar"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="12dp"
            android:layout_weight="1"
            android:background="@null"
            android:fontFamily="@font/montserrat_medium"
            android:hint="Search by name or phone number..."
            android:maxLines="1"
            android:textColorHint="#B4B4BA"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/delete"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/delete_icon_in_search" />
    </LinearLayout>
    <ListView
        android:id="@+id/listFriends"
        android:layout_marginTop="15dp"
        android:scrollbars="none"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>



</LinearLayout>