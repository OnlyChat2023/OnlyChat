<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181828"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="20dp"
        >
        <ImageView
            android:id="@+id/backButton"
            android:layout_width="20dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/global_chat_back" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/global_chat_avatar1"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:shapeAppearanceOverlay="@style/roundedImagesStyle"
            />

        <ImageButton
            android:id="@+id/up_image_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_below="@id/avatar"
            android:layout_alignEnd="@id/avatar"
            android:layout_gravity="bottom|right"
            android:layout_marginTop="-27dp"
            android:layout_marginEnd="-2dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/up_img_btn"
            android:src="@drawable/ic_add" />

        <RelativeLayout
            android:id="@+id/group_name_layout"
            android:layout_below="@id/avatar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingHorizontal="50dp"
            tools:ignore="UnknownId">
            <TextView
                android:id="@+id/group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Anonymous"
                android:textColor="#ffffff"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:fontFamily="@font/montserrat_semibold"
                android:textSize="28dp"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:layout_marginStart="5dp"
                android:layout_toRightOf="@id/group_name"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/ic_pencil" />

        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:paddingHorizontal="50dp">

        <Button
            android:id="@+id/add_member_btn"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/ic_add_member"
            android:stateListAnimator="@null"
            android:gravity="center" />

    </LinearLayout>
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:paddingHorizontal="24dp"
            android:orientation="vertical"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Setting"
                android:textColor="#818181"
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_semibold" />

            <RelativeLayout
                android:id="@+id/share"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:paddingVertical="6dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Share"
                    android:layout_centerVertical="true"
                    android:textColor="#ffffff"
                    android:textSize="18dp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/global_chat_share" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/notification"
                android:layout_width="match_parent"
                android:layout_marginBottom="18dp"
                android:paddingVertical="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/notificationText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Turn off notification"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="#ffffff"

                    />

                <ImageView
                    android:id="@+id/notificationImg"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/global_chat_notification" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/members"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:paddingVertical="6dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Members (31257)"
                    android:textColor="#ffffff"
                    android:textSize="18dp"

                    />

                <ImageView
                    android:id="@+id/imageView15"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/global_chat_mebers" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/delete_chat"
                android:layout_width="match_parent"
                android:layout_marginBottom="18dp"
                android:paddingVertical="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete chat"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    />

                <ImageView
                    android:id="@+id/imageView16"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/global_chat_delete_2" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/leave"
                android:layout_width="match_parent"
                android:layout_marginBottom="25dp"
                android:paddingVertical="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Leave"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="#ffffff"

                    />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="22dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/leave_icon" />

            </RelativeLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Privacy and support"
                android:textColor="#818181"
                android:textSize="16dp"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/montserrat_semibold" />
            <RelativeLayout
                android:id="@+id/block"
                android:layout_width="match_parent"
                android:layout_marginBottom="18dp"
                android:paddingVertical="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Block"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    />
                <ImageView
                    android:id="@+id/imageView18"
                    android:layout_width="23dp"
                    android:layout_height="23dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/global_chat_blok" />
            </RelativeLayout>
            <RelativeLayout
                android:id="@+id/report"
                android:layout_width="match_parent"
                android:layout_marginBottom="18dp"
                android:paddingVertical="6dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Report"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_alignParentStart="true"
                    android:textSize="18dp"
                    android:textColor="#ffffff"
                    />
                <ImageView
                    android:id="@+id/imageView19"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    app:srcCompat="@drawable/global_chat_report" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>