<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GroupChat.GroupChatSetting">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#181828"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/avatar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/avatar_img" />

            <TextView
                android:id="@+id/groupname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/avatar"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/montserrat_bold2"
                android:text="Anonymous"
                android:textColor="@color/white"
                android:textSize="35sp" />

            <ImageView
                android:id="@+id/icon"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:src="@drawable/ic_back_button"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="9dp" />

            <LinearLayout
                android:id="@+id/setting_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/groupname"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/settingL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bold2"
                    android:text="Setting"
                    android:textColor="#818181"
                    android:textSize="20sp" />

                <ListView
                    android:id="@android:id/list"
                    android:layout_width="match_parent"
                    android:layout_height="400dp" />
            </LinearLayout>

            <View
                android:id="@+id/gap"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_below="@id/setting_section"
                android:layout_weight="1" />

            <LinearLayout
                android:id="@+id/privacy_support_section"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/gap"
                android:layout_marginTop="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/privacyL"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/montserrat_bold2"
                    android:text="Privacy and Support"
                    android:textColor="#818181"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#181828"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    tools:ignore="MissingConstraints,UseCompoundDrawables">

                    <TextView
                        android:id="@+id/blockL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Block"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="77dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <View android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/ic_block"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="10dp"
                        tools:ignore="MissingConstraints"
                        android:src="@drawable/ic_ban"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="9dp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="10dp"
                    android:background="#181828"

                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:paddingLeft="2dp"
                    tools:ignore="MissingConstraints,UseCompoundDrawables">

                    <TextView
                        android:id="@+id/reportL"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Report"
                        android:layout_marginLeft="10dp"
                        android:fontFamily="@font/montserrat_medium"
                        android:layout_marginTop="10dp"
                        android:textColor="#ffffff"
                        android:textSize="20sp"
                        tools:layout_editor_absoluteX="77dp"
                        tools:layout_editor_absoluteY="16dp" />

                    <View android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/ic_report"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:padding="10dp"
                        android:src="@drawable/ic_warning"
                        tools:ignore="MissingConstraints"
                        tools:layout_editor_absoluteX="16dp"
                        tools:layout_editor_absoluteY="9dp" />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>>
</androidx.constraintlayout.widget.ConstraintLayout>