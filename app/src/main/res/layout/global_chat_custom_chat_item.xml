<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:gravity="center_vertical"
    android:background="@drawable/global_chat_chat_item_background"
    android:layout_height="wrap_content"
    android:paddingVertical="8dp"
    >

    <ImageView
        android:id="@+id/messageAvatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        />

    <LinearLayout
        android:id="@+id/information"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/messageAvatar"
        android:orientation="vertical"
        android:paddingRight="80dp">

        <TextView
            android:id="@+id/messageName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/montserrat_semibold"
            android:text="Anonymous"
            android:maxLines="1"
            android:layout_marginBottom="5dp"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/messageContent"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:fontFamily="@font/montserrat_regular"
            android:text="Yes, I was working on it last night and..."
            android:textColor="#FFFFFF"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/messageTime"
        android:gravity="center_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@id/information"
        android:layout_alignTop="@id/information"
        android:fontFamily="@font/montserrat_regular"
        android:text="2:00 PM"
        android:textColor="#FFFFFF"
        android:textSize="11sp" />
</RelativeLayout>