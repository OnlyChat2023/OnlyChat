<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#181828"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="215dp"
        android:paddingVertical="20dp"
        android:paddingHorizontal="14dp"
        >
        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="20dp"
            android:layout_height="28dp"
            app:srcCompat="@drawable/global_chat_back" />

        <ImageView
            android:id="@+id/avatar"
            android:layout_marginTop="15dp"
            android:layout_width="115dp"
            android:layout_height="115dp"
            android:layout_centerHorizontal="true"
            app:srcCompat="@drawable/global_chat_avatar1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Anonymous"
            android:textColor="#ffffff"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/montserrat_semibold"
            android:textSize="28dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/gap"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#818181" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Setting"
            android:textColor="#818181"
            android:textSize="21dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/montserrat_semibold" />

        <RelativeLayout
            android:id="@+id/share"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/montserrat_medium"
                android:text="Share"
                android:textColor="#ffffff"
                android:textSize="18dp" />

            <ImageView
                android:id="@+id/imageView13"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_share" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Turn off notification"
                android:fontFamily="@font/montserrat_medium"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:textColor="#ffffff"

                />

            <ImageView
                android:id="@+id/imageView14"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_notification" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/members"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:paddingHorizontal="14dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:fontFamily="@font/montserrat_medium"
                android:text="Members (31257)"
                android:textColor="#ffffff"
                android:textSize="18dp"

                />

            <ImageView
                android:id="@+id/imageView15"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_mebers" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete chat"
                android:fontFamily="@font/montserrat_medium"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:textColor="#ffffff"

                />

            <ImageView
                android:id="@+id/imageView16"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_delete_2" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Leave"
                android:fontFamily="@font/montserrat_medium"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:textColor="#ffffff"

                />

            <ImageView
                android:id="@+id/imageView17"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_leave" />
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#818181" />
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy and support"
            android:textColor="#818181"
            android:textSize="21dp"
            android:layout_marginBottom="18dp"
            android:fontFamily="@font/montserrat_semibold" />
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="24dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Block"
                android:fontFamily="@font/montserrat_medium"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:textColor="#ffffff"

                />

            <ImageView
                android:id="@+id/imageView18"
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_blok" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingHorizontal="14dp"
            android:layout_marginBottom="8dp"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Report"
                android:fontFamily="@font/montserrat_medium"
                android:layout_alignParentStart="true"
                android:textSize="18dp"
                android:textColor="#ffffff"

                />

            <ImageView
                android:id="@+id/imageView19"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                app:srcCompat="@drawable/global_chat_report" />

        </RelativeLayout>

    </LinearLayout>
</LinearLayout>