<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditProfile.EditProfileStep2">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:fontFamily="@font/montserrat_medium"
            android:layout_height="wrap_content"
            android:paddingVertical="20dp"
            android:paddingHorizontal="25dp">

            <ImageView
                android:id="@+id/backButton"
                android:layout_width="15dp"
                android:layout_height="35dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/global_chat_back" />

            <LinearLayout
                android:id="@+id/input_section"
                android:layout_width="match_parent"
                android:layout_below="@id/backButton"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/fbL"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Facebook Link"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/et_facebook"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_input"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/insL"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Instagram Link"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/et_instagram"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:background="@drawable/edit_input"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/twitterL"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Twitter Link"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/et_twitter"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="wrap_content"
                    android:background="@drawable/edit_input"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:layout_marginBottom="30dp"/>
                <TextView
                    android:id="@+id/desL"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Description"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:layout_marginBottom="10dp"/>

                <EditText
                    android:id="@+id/et_description"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:layout_height="150dp"
                    android:paddingHorizontal="15dp"
                    android:paddingVertical="8dp"
                    android:background="@drawable/edit_input"
                    android:layout_marginBottom="30dp" />

            </LinearLayout>

            <Button
                android:layout_below="@id/input_section"
                android:layout_alignEnd="@id/input_section"
                android:id="@+id/finishBtn"
                android:textAllCaps="false"
                android:layout_width="wrap_content"
                android:layout_height="45dp"
                android:layout_marginEnd="15dp"
                android:background="@drawable/edit_profile_btn"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingHorizontal="15dp"
                android:paddingVertical="8dp"
                android:text="Finish"
                android:textSize="12sp"
                tools:ignore="MissingConstraints"
                tools:layout_editor_absoluteX="77dp"
                tools:layout_editor_absoluteY="237dp" />

        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>