<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/chat_message_send"
    android:orientation="horizontal"
    android:background="@color/background_dark"
    android:gravity="right">

    <TextView
        android:id="@+id/chat_message_send_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A primary toolbar within the activity that may display the activity title, application-level navigation affordances, and other interactive items."
        android:textColor="@color/white"
        android:fontFamily="@font/montserratmedium"
        android:textSize="13sp"
        android:paddingHorizontal="15dp"
        android:paddingVertical="5dp"
        android:background="@drawable/message_send_background"
        android:maxWidth="250dp" />

</LinearLayout>