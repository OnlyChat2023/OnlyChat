<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#181828">
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:id="@+id/relativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingStart="20dp"
            android:paddingEnd="20dp">

            <TextView
                android:id="@+id/titleForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/montserrat_bold"
                android:text="OTP\nAUTHENTICATION"
                android:lineSpacingMultiplier="1.20"
                android:textAlignment="center"
                android:layout_marginTop="50dp"
                android:layout_marginBottom="50dp"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                android:textSize="32sp" />

            <TextView
                android:id="@+id/IntroduceHeader"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/titleForm"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Authentication"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/IntroduceDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/IntroduceHeader"
                android:layout_marginBottom="32dp"
                android:fontFamily="@font/montserrat_semibold"
                android:lineSpacingMultiplier="1.20"
                android:text="An authentication code has been send to your phone number and it will be expired in 10 minutes."
                android:textColor="#D9D9D9"
                android:textSize="13sp" />

            <LinearLayout
                android:id="@+id/otpGroup"
                android:layout_below="@id/IntroduceDescription"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/inputOTP1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_otp"
                    android:layout_marginEnd="11dp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="35sp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    />

                <EditText
                    android:id="@+id/inputOTP2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_otp"
                    android:layout_marginEnd="11dp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="35sp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    />

                <EditText
                    android:id="@+id/inputOTP3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_otp"
                    android:layout_marginEnd="11dp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="35sp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    />

                <EditText
                    android:id="@+id/inputOTP4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_otp"
                    android:layout_marginEnd="11dp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="35sp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    />

                <EditText
                    android:id="@+id/inputOTP5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_otp"
                    android:layout_marginEnd="11dp"
                    android:maxLength="1"
                    android:textAlignment="center"
                    android:inputType="number"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="35sp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    />

                <EditText
                    android:id="@+id/inputOTP6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/input_otp"
                    android:textAlignment="center"
                    android:maxLength="1"
                    android:inputType="number"
                    android:fontFamily="@font/montserrat_semibold"
                    android:textSize="35sp"
                    android:textCursorDrawable="@null"
                    android:textColor="@color/white"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/otpGroup"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="20dp"
                android:id="@+id/resendGroup">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Didn't receive the code ?"
                    android:textColor="#D9D9D9"
                    android:layout_marginEnd="10dp"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/resendBtn"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/montserrat_medium"
                    android:text="Resend"
                    android:textColor="#A479FF" />
            </LinearLayout>

            <Button
                android:id="@+id/ContinueBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/resendGroup"
                android:background="@drawable/auth_button"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingTop="12dp"
                android:paddingBottom="13dp"
                android:text="Continue"
                android:enabled="false"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <View
                android:id="@+id/line_spec"
                android:layout_width="wrap_content"
                android:layout_height="22dp"
                android:layout_below="@id/ContinueBtn"
                android:layout_marginTop="35dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/bottom_spec" />

            <TextView
                android:id="@+id/already_have_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/line_spec"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/montserrat_semibold"
                android:text="Already have an account ?"
                android:textColor="@color/white"
                android:textSize="14sp" />

            <Button
                android:id="@+id/loginBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/already_have_text"
                android:layout_marginTop="20dp"
                android:background="@drawable/other_auth_submit_button"
                android:fontFamily="@font/montserrat_semibold"
                android:paddingTop="12dp"
                android:paddingBottom="15dp"
                android:text="Sign in Now"
                android:textAllCaps="false"
                android:textSize="18sp" />
        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>