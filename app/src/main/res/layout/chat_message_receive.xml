<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/chat_message_receive"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@color/background_dark">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_weight="0"
        android:id="@+id/chat_message_avatar"
        android:layout_marginRight="5dp"
        android:background="@color/white"
        app:shapeAppearanceOverlay="@style/circle"/>

    <TextView
        android:id="@+id/chat_message_receive_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A primary toolbar within the activity that may display the activity title, application-level navigation affordances, and other interactive items."
        android:textColor="@color/white"
        android:fontFamily="@font/montserratmedium"
        android:textSize="13sp"
        android:paddingHorizontal="10dp"
        android:paddingVertical="5dp"
        android:background="@drawable/message_receive_background"
        android:maxWidth="220dp"/>

</LinearLayout>