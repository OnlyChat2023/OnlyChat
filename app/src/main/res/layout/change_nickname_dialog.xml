<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingBottom="15dp"
    android:paddingTop="25dp"
    android:paddingHorizontal="20dp"
    android:layout_gravity="center"
    android:background="@drawable/dialog_background">

    <TextView
        android:layout_marginLeft="0dp"
        android:id="@+id/friend_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#E9E9E9"
        android:text="Bill Gate's nickname"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="15dp"
        android:layout_marginBottom="4dp"
        />

    <EditText
        android:id="@+id/friend_nickname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="14dp"
        android:hint="Elon Mush's father"
        android:paddingLeft="5dp"
        android:textColor="@color/black"
        android:textColorHint="#818181"
        android:background="@drawable/nickname_form_background"/>

    <TextView
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        android:id="@+id/user_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#e9e9e9"
        android:text="Your nickname"
        android:fontFamily="@font/montserrat_regular"
        android:textSize="15dp"
        android:layout_marginBottom="4dp"
        />

    <EditText
        android:id="@+id/user_nickname"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:textSize="14dp"
        android:textColor="@color/black"
        android:hint="Grandfather"
        android:paddingLeft="5dp"
        android:background="@drawable/nickname_form_background"
        android:textColorHint="#818181"/>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_horizontal">

        <Button
            android:id="@+id/yes_btn"
            android:layout_width="74dp"
            android:layout_height="26dp"
            android:text="save"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14dp"
            android:layout_marginRight="5dp"
            android:background="@drawable/yes_button_background"
            />

        <Button
            android:id="@+id/refresh_btn"
            android:layout_width="80dp"
            android:layout_height="26dp"
            android:text="remove"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14dp"
            android:layout_marginHorizontal="5dp"
            android:background="@drawable/yes_button_background"
            />

        <Button
            android:id="@+id/no_btn"
            android:layout_width="74dp"
            android:layout_height="26dp"
            android:text="cancel"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/montserrat_bold"
            android:textSize="14dp"
            android:background="@drawable/no_button_background"
            />
    </LinearLayout>
</LinearLayout>